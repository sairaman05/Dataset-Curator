            }
        }

        stage('Run Streamlit App') {
            steps {
                bat '"C:\\Users\\Sai Raman\\AppData\\Local\\Programs\\Python\\Python311\\python.exe" -m streamlit run app.py --server.headless true'
            }
        }

    }
}
